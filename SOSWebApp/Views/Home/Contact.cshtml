@model MVCEmail.Models.EmailFormModel
@{
    ViewBag.Title = "Contact";
}
<h2>@ViewBag.Title.</h2>
<br/>
<br/>
<br />
@using (Html.BeginForm("Contact", "Home", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <h4>Send your comments.</h4>
    <hr />
    @*@Html.BeginForm("Contact", "HomeController")*@
    <div class="form-group">
        <p>Send to Physicians?</p>
        <span>Yes:</span>
        @Html.RadioButtonFor(m => m.IsPhysicianOnly, true)
        <span>No:</span>
        @Html.RadioButtonFor(m => m.IsPhysicianOnly, false)<br/>
        <p>Send to Clinical Volunteers?</p>
        <span>Yes:</span>
        @Html.RadioButtonFor(m => m.IsClinicalOnly, true)
        <span>No:</span>
        @Html.RadioButtonFor(m => m.IsClinicalOnly, false)<br/>
        <p>Send to Generael?</p>
        <span>Yes:</span>
        @Html.RadioButtonFor(m => m.IsGeneralOnly, true)
        <span>No:</span>
        @Html.RadioButtonFor(m => m.IsGeneralOnly, false)<br/>
        <p>Send to Medical Interpreter?</p>
        <span>Yes:</span>
        @Html.RadioButtonFor(m => m.IsInterpreterOnly, true)
        <span>No:</span>
        @Html.RadioButtonFor(m => m.IsInterpreterOnly, false)<br/>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.FromName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.FromName, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.FromName)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.FromEmail, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.FromEmail, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.FromEmail)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Message, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextAreaFor(m => m.Message, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Message)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Upload, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            <input type="file" name="upload" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Send" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
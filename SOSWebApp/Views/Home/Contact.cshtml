@model MVCEmail.Models.EmailFormModel
@{
    ViewBag.Title = "Contact";
}
<h2>@ViewBag.Title.</h2>
<br/>
<br/>
<br />
@using (Html.BeginForm("Contact", "Home", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <h4>Send your comments.</h4>
    <hr />
    <div class="form-group">
        @*<input type="radio" name="physcianVolunteer" value="Physcian" /> Send to Physcians<br /><br />
        <input type="radio" name="clinicalVolunteer" value="Clinical" /> Send to Clinical Staff<br /><br />
        <input type="radio" name="GeneraelVolunteer" value="Generael" /> Send to Generael Staff<br /><br />
        <input type="radio" name="interpreterVolunteer" value="Interpreter" /> Send to Medical Interpreters<br /><br />
        <input type="radio" name="allVolunteer" value="AllVolunteers" checked /> Send to All Volunteers<br /><br />*@
        @Html.RadioButtonFor(m => m.radioCheck, "physcianVolunteer")
        @Html.RadioButtonFor(m => m.radioCheck, "clinicalVolunteer")
        @Html.RadioButtonFor(m => m.radioCheck, "GeneraelVolunteer")
        @Html.RadioButtonFor(m => m.radioCheck, "interpreterVolunteer")
        @Html.RadioButtonFor(m => m.radioCheck, "allVolunteer")
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.FromName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.FromName, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.FromName)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.FromEmail, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.FromEmail, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.FromEmail)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Message, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextAreaFor(m => m.Message, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Message)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Upload, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            <input type="file" name="upload" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Send" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
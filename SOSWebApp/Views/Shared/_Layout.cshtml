<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        #footer {
            position: relative;
            left: 0;
            bottom: 0;
            width: 100%;
            background-color:silver;
            color: black;
            text-align: center;
            height:10%;
        }
        .fa {
            padding: 15px;
            font-size: 30px;
            width: 58px;
            height: 60px;
            text-align: center;
            text-decoration: none;
            margin: 5px 2px;
        }
        .fa:hover {
            opacity: 0.7;
        }

        .fa-facebook {
            background: #3B5998;
            color: white;
        }

        .wrap {
            position: relative;
            margin: 0 auto;
            padding: 20px;
            overflow: hidden;
            background: #3E3E3E;
            color: #fff;
            font: 900 14px/26px 'Open Sans', sans-serif;
            text-transform: uppercase;
        }

        #footer h3 a,
        #footer h3 p {
            margin: 0;
            color: #fff;
            text-decoration: none;
        }

        .left {
            float: left;
            width: 25%;
        }

        .right {
            float: right;
            width: 25%;
        }

        .centered {
            overflow: hidden; /* claim the left over width between these 25% floats */
        }
        .fa-twitter {
            background: #55ACEE;
            color: white;
        }
    </style>
</head>
<body>
    <div class="navbar">
        <div class="container">
            <div class="navbar-header">
                <a href="/Home/Home" class="btn btn-primary">Home</a>
                <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                    <button type="button" class="btn btn-primary">About Us</button>
                    <div class="btn-group" role="group">
                        <button id="btnGroupDrop1" type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button>
                        <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                            <a class="dropdown-item" href="/Home/About">Staff</a>
                            <a class="dropdown-item" href="/Home/About">Our Stories</a>
                            <a class="dropdown-item" href="/Home/About">Board Of Directors</a>
                            <a class="dropdown-item" href="/Home/About">Patient Testimonials</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                <button type="button" class="btn btn-primary">Language</button>
                <div class="btn-group" role="group">
                    <button id="btnGroupDrop1" type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button>
                    <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                        <a class="dropdown-item">
                            <!--Enables Google Translate Functionality-->
                            <div id="google_translate_element"></div>
                            <script type="text/javascript">
                                function googleTranslateElementInit() {
                                    new google.translate.TranslateElement({
                                        pageLanguage: 'en',
                                        includedLanguages: 'en,es', layout: google.translate.TranslateElement.InlineLayout.SIMPLE
                                    }, 'google_translate_element');
                                }
                            </script>
                            <script type="text/javascript" src="//translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>
                        </a>
                    </div>
                </div>
            </div>
            <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                <a href="/VolunteersForm/GetPhysicianForm" class="btn btn-primary">Get Involved</a>
                <div class="btn-group" role="group">
                    <button id="btnGroupDrop1" type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button>
                    <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                        <a class="dropdown-item" href="/VolunteersForm/GetPhysicianForm">Physician Volunteer Form</a>
                        <a class="dropdown-item" href="/VolunteersForm/GetNonPhysicianForm">Non-Physician Clinical Volunteer Application</a>
                        <a class="dropdown-item" href="/VolunteersForm/GetNonClinicForm">General (Non-Clinical and Student) Volunteer Form</a>
                        <a class="dropdown-item" href="/VolunteersForm/GetInterpreterForm">Medical Interpreter Volunteer Form</a>
                        <a class="dropdown-item" href="/VolunteersForm/GetVolunteerCommentForm">Volunteer Comment Form</a>
                    </div>
                </div>
            </div>
            <div class="btn-group" role="group" aria-label="Button group with nested dropdown">

                <a href="/ReferAPatient/ReferAPatient"><button type="button" class="btn btn-primary">Refer a Patient</button></a>
            </div>
            <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                <button type="button" class="btn btn-primary">Get Help</button>
                <div class="btn-group" role="group">
                    <button id="btnGroupDrop1" type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></button>
                    <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                        <a class="dropdown-item" href="/PartnerClinic/GetPartnerCLinic">Partner Clinics</a>
                    </div>
                </div>
            </div>
            <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                <button type="button" class="btn btn-primary">Events</button>
            </div>
            <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                <a href="https://soslouisville.kindful.com/">
                    <button type="button" class="btn btn-primary">Donate</button>
                </a>
            </div>
            <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                <button type="button" class="btn btn-primary">Staff Access</button>
            </div>
        </div>
        <div class="container body-content">
            @RenderBody()
            <hr />
        </div>
        <footer id="footer">
            <div class="wrap">
                <div class="centered">
                    <p>See our other pages:<br/>
                        <a href="/Home/Home">Home</a><br/>
                        <a href="/ReferAPatient/ReferAPatient">Refer A Patient</a>  <br/>
                    
                            </p>
                </div>
                <div class="right">
                    <p>Follow us on social media:</p>
                    <a href="https://www.facebook.com/SurgeryonSundayLouisville" class="fa fa-facebook"></a>
                    <a href="https://twitter.com/soslouisville" class="fa fa-twitter"></a>
                    </div>
                <div class="left">
                    <p>Get Involved:<br/>
                        <a href="/VolunteersForm/GetPhysicianForm">Physician Volunteer Form</a><br/>
                        <a href="/VolunteersForm/GetNonPhysicianForm">Non-Physician Clinical Volunteer Application</a><br />
                        <a href="/VolunteersForm/GetNonClinicForm">General (Non-Clinical and Student) Volunteer Form</a><br />
                        <a href="/VolunteersForm/GetInterpreterForm">Medical Interpreter Volunteer Form</a><br />
                        <a href="/VolunteersForm/GetVolunteerCommentForm">Volunteer Comment Form</a><br />
                    </p>
                </div>
                </div>
                </footer>
</div>

                @Scripts.Render("~/bundles/jquery")
                @Scripts.Render("~/bundles/bootstrap")
                @RenderSection("scripts", required: false)
</body>
</html>
